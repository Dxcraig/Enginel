# Environment Variables for Railway Deployment
# Copy this file and configure for your deployment

# ===== DJANGO CORE =====
SECRET_KEY=django-insecure-CHANGE-THIS-IN-PRODUCTION
DEBUG=False
ALLOWED_HOSTS=.railway.app,localhost,127.0.0.1

# ===== DATABASE (Railway will auto-inject these from PostgreSQL service) =====
# Reference Railway PostgreSQL service variables:
# PGDATABASE=${{Postgres.PGDATABASE}}
# PGUSER=${{Postgres.PGUSER}}
# PGPASSWORD=${{Postgres.PGPASSWORD}}
# PGHOST=${{Postgres.PGHOST}}
# PGPORT=${{Postgres.PGPORT}}

# ===== REDIS (Railway will auto-inject from Redis service) =====
# Reference Railway Redis service variables:
# REDIS_URL=${{Redis.REDIS_URL}}

# ===== AWS S3 STORAGE =====
USE_S3=True
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_STORAGE_BUCKET_NAME=your-bucket-name
AWS_S3_REGION_NAME=us-east-1
AWS_PRESIGNED_URL_EXPIRY=3600
AWS_UPLOAD_PRESIGNED_URL_EXPIRY=3600
AWS_DOWNLOAD_PRESIGNED_URL_EXPIRY=60

# ===== SECURITY =====
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_AGE=86400
PASSWORD_MIN_LENGTH=12

# CSRF & CORS
CSRF_TRUSTED_ORIGINS=https://your-app.railway.app
CORS_ALLOWED_ORIGINS=https://your-app.railway.app

# Rate Limiting
THROTTLE_ANON=100/hour
THROTTLE_USER=1000/hour

# IP Filtering (comma-separated)
IP_WHITELIST=
IP_BLACKLIST=

# Security Monitoring
SECURITY_LOG_ATTACKS=True
SECURITY_BLOCK_AFTER_ATTACKS=3
SECURITY_BLOCK_DURATION=86400

# ===== EMAIL =====
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_USE_SSL=False
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password
DEFAULT_FROM_EMAIL=noreply@yourdomain.com
SERVER_EMAIL=server@yourdomain.com

# ===== NOTIFICATIONS =====
NOTIFICATIONS_ENABLED=True
NOTIFICATION_BATCH_SIZE=50
NOTIFICATION_RETRY_DELAY=300
NOTIFICATION_MAX_RETRIES=3
EMAIL_RATE_LIMIT_PER_USER=100
EMAIL_RATE_LIMIT_WINDOW=3600

# ===== AUTHENTICATION =====
TOKEN_EXPIRATION_HOURS=24
API_KEY_EXPIRATION_DAYS=365
REFRESH_TOKEN_EXPIRATION_DAYS=30

# ===== RAILWAY SPECIFIC (Auto-injected) =====
# PORT - Railway sets this automatically
# RAILWAY_ENVIRONMENT - Set by Railway
# RAILWAY_PUBLIC_DOMAIN - Set by Railway when you generate domain
# RAILWAY_STATIC_URL - Set by Railway
