{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "python -m pip install -r enginel/requirements.txt"
  },
  "deploy": {
    "startCommand": "cd enginel && python manage.py collectstatic --noinput && gunicorn enginel.wsgi --bind 0.0.0.0:$PORT --workers 4",
    "healthcheckPath": "/api/",
    "healthcheckTimeout": 100,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
